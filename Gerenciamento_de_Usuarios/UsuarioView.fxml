<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UsuarioController">
   <top>
      <MenuBar>
        <menus>
          <Menu text="Arquivo">
            <items>
              <MenuItem onAction="#handleConfigurarDb" text="Configurar Banco de Dados..." />
              <MenuItem onAction="#handleSair" text="Sair" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <HBox>
         <children>
            <VBox prefWidth="300.0" spacing="10.0" style="-fx-background-color: #f4f4f4; -fx-border-color: #cccccc; -fx-border-width: 0 1 0 0;">
               <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
               <children>
                  <Label text="Detalhes do Usuário"><font><Font name="System Bold" size="18.0" /></font></Label>
                  <Label text="ID:" />
                  <TextField fx:id="idTextField" editable="false" promptText="Automático" />
                  <Label text="Nome Completo:" />
                  <TextField fx:id="nomeTextField" promptText="Digite o nome completo" />
                  <Label text="Email:" />
                  <TextField fx:id="emailTextField" promptText="Digite o e-mail" />
                  <Label text="CPF:" />
                  <TextField fx:id="cpfTextField" promptText="Digite o CPF" />
                  <Label text="Login:" />
                  <TextField fx:id="loginTextField" promptText="Digite o login de acesso" />
                  <Label text="Cargo:" />
                  <TextField fx:id="cargoTextField" promptText="Ex: Desenvolvedor, Gerente" />
                  <Label text="Senha:" />
                  <PasswordField fx:id="senhaField" promptText="Digite a senha" />
                  <HBox spacing="10.0">
                     <children>
                        <Button fx:id="salvarButton" onAction="#handleSalvar" prefWidth="80.0" text="Salvar" />
                        <Button fx:id="novoButton" onAction="#handleNovo" prefWidth="80.0" text="Novo" />
                        <Button fx:id="removerButton" onAction="#handleRemover" disable="true" prefWidth="80.0" text="Remover" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox HBox.hgrow="ALWAYS" spacing="10.0">
               <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
               <children>
                  <Label text="Usuários Cadastrados"><font><Font name="System Bold" size="18.0" /></font></Label>
                  <TableView fx:id="tabelaUsuarios" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="colunaId" prefWidth="50.0" text="ID" />
                      <TableColumn fx:id="colunaNome" prefWidth="150.0" text="Nome" />
                      <TableColumn fx:id="colunaEmail" prefWidth="150.0" text="Email" />
                      <TableColumn fx:id="colunaCargo" prefWidth="120.0" text="Cargo" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
</BorderPane>