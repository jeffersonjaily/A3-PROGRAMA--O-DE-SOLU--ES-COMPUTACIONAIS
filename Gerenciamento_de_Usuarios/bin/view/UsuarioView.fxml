<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UsuarioController">
   <top>
      <MenuBar>
        <menus>
          <Menu text="Arquivo">
            <items>
              <MenuItem onAction="#handleConfigurarDb" text="Configurar Banco de Dados..." />
              <MenuItem onAction="#handleSair" text="Sair" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <HBox>
         <children>
            <VBox prefWidth="250.0" spacing="10.0" style="-fx-background-color: #f4f4f4; -fx-border-color: #cccccc; -fx-border-width: 0 1 0 0;">
               <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
               <children>
                  <Label text="Detalhes do Usuário"><font><Font name="System Bold" size="18.0" /></font></Label>
                  <Label text="ID:" />
                  <TextField fx:id="idTextField" editable="false" promptText="Automático" />
                  <Label text="Nome:" />
                  <TextField fx:id="nomeTextField" promptText="Digite o nome" />
                  <Label text="Email:" />
                  <TextField fx:id="emailTextField" promptText="Digite o e-mail" />
                  <Label text="Senha:" />
                  <PasswordField fx:id="senhaField" promptText="Digite a senha" />
                  <HBox spacing="10.0">
                     <children>
                        <Button fx:id="salvarButton" onAction="#handleSalvar" prefWidth="70.0" text="Salvar" />
                        <Button fx:id="novoButton" onAction="#handleNovo" prefWidth="70.0" text="Novo" />
                        <Button fx:id="removerButton" onAction="#handleRemover" disable="true" prefWidth="70.0" text="Remover" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox prefWidth="450.0" spacing="10.0">
               <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
               <children>
                  <Label text="Usuários Cadastrados"><font><Font name="System Bold" size="18.0" /></font></Label>
                  <TableView fx:id="tabelaUsuarios">
                    <columns>
                      <TableColumn fx:id="colunaId" prefWidth="75.0" text="ID" />
                      <TableColumn fx:id="colunaNome" prefWidth="150.0" text="Nome" />
                      <TableColumn fx:id="colunaEmail" prefWidth="200.0" text="Email" />
                    </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
</BorderPane>